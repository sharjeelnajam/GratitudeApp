# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/guided-alignment-rooms

# Firebase Admin SDK - use service account JSON path or base64 encoded JSON
# Option 1: Path to service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./service-account.json

# Option 2: Base64 encoded service account JSON (for production/CI)
# FIREBASE_SERVICE_ACCOUNT_BASE64=<base64-encoded-json>

# Server
PORT=4000

# CORS - Comma-separated allowed origins (Expo dev: http://localhost:8081, http://192.168.x.x:8081)
CORS_ORIGINS=http://localhost:8081,http://localhost:19006
